<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ch"
    tools:context=".login">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:src="@drawable/tk1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="TikTok"
            android:textColor="#F60D8D"
            android:textSize="50dp"
            android:fontFamily="cursive"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:text="  Login Now"
            android:layout_marginLeft="22dp"
            android:textColor="#F60D8D"
            android:textSize="35dp"
            android:fontFamily="cursive"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:text="User"
            android:textColor="#BDBDBF"
            android:textSize="18dp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/editname"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_baseline_person_24"
            android:drawablePadding="10dp"
            android:inputType="textEmailAddress" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:text="Password"
            android:textColor="#BDBDBF"
            android:textSize="18dp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/password"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_baseline_visibility_24"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/bt_login"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:text="Login"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#F8F5F5"
            android:layout_marginTop="40dp"
            android:background="@drawable/button" />

        <LinearLayout
            android:layout_width="330dp"
            android:layout_gravity="center"
            android:layout_height="48dp"
            android:layout_marginTop="20dp">

            <Button
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:background="@drawable/button2"
                android:text="Gmail"
                android:textColor="#FFFFFF"
                android:textSize="15dp"
                android:textStyle="bold" />

            <Button
                android:layout_width="152dp"
                android:layout_height="45dp"
                android:layout_marginLeft="28dp"
                android:background="@drawable/button2"
                android:text="Facebook"
                android:textColor="#FDFCFC"
                android:textSize="15dp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot password?"
            android:textColor="#3FC2D3"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:textStyle="italic"
            android:layout_marginTop="40dp"
            />
        <LinearLayout
            android:layout_width="240dp"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Don't have an account ? "
                android:textColor="#9D9D9E"
                android:textSize="15dp"
                android:textStyle="italic"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:textSize="22dp"
                android:textStyle="bold"
                android:onClick="click"
                android:textColor="#E31B93"
                /></LinearLayout>
    </LinearLayout>
</RelativeLayout>